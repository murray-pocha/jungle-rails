<h1>New Category</h1>

<%= form_with model: @category, url: admin_categories_path, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <%= form.submit 'Create Category', class: 'btn btn-success' %>
<% end %>

<%= link_to 'Back to Categories', admin_categories_path, class: 'btn btn-secondary' %>